<script>
const inputs = document.querySelectorAll("input");

inputs.forEach(i => i.addEventListener("input", calc));

function fmt(n, currency=false){
  if (isNaN(n)) return "";
  return (currency ? "â‚¹ " : "") +
    Number(n).toLocaleString("en-IN", {minimumFractionDigits:2});
}

function calc(){
  let C5=+firex.value, C6=+suprex.value, C7=+q1.value,
      C8=+unilay.value, C9p=+flamex.value;

  let C9=C5+C6+C7+C8+C9p;
  totalQty.textContent=C9;

  let K=[30,10,10,12,12];
  let J=[120,40,40,48,48];

  let F5=C5*K[0]+C6*K[1]+C7*K[2]+C8*K[3]+C9p*K[4];
  let G5=C9?F5/C9:0;
  let H5=C5*J[0]+C6*J[1]+C7*J[2]+C8*J[3]+C9p*J[4];

  let F6=(Math.floor(C9/10)*10*7.5)+(Math.floor(C5/10)*10*10);
  let G6=C9?F6/C9:0;

  let F7=C9?(F5+F6)/C9:0;
  let G7=G5+G6;
  let H7=C9?H5/C9:0;

  let F10=C5*K[0], G10=C5?F10/C5:0, H10=C5*J[0];
  let F11=(Math.floor(C5/10)*10*7.5)+(Math.floor(C5/10)*10*10);
  let G11=C5?F11/C5:0;

  f5.innerHTML=fmt(F5,true);
  g5.innerHTML=fmt(G5,true);
  h5.innerHTML=fmt(H5);

  f6.innerHTML=fmt(F6,true);
  g6.innerHTML=fmt(G6,true);

  f7.innerHTML=fmt(F7,true);
  g7.innerHTML=fmt(G7,true);
  h7.innerHTML=fmt(H7);

  f10.innerHTML=fmt(F10,true);
  g10.innerHTML=fmt(G10,true);
  h10.innerHTML=fmt(H10);

  f11.innerHTML=fmt(F11,true);
  g11.innerHTML=fmt(G11,true);
}

calc(); // initial load
</script>

